@model FirstCore.Models.Yorum
<div class="card my-4">
    <h5 class="card-header">Yorum yap:</h5>
    <div class="card-body">
        @using (Html.BeginForm("YorumPost", "Blog", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextAreaFor(x => x.AdSoyad, new { value = "", placeholder = "Adınız..." })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.Ileti, new { value = "", placeholder = "Iletiniz..." })
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        }

    </div>
</div>